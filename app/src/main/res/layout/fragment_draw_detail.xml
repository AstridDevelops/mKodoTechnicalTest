<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="lotteryDraw" type="com.example.fortunes.model.LotteryDraw" />

        <variable name="viewmodel" type="com.example.fortunes.viewmodel.DrawDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        >

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/draw_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/draw_detail_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:id="@+id/draw_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:text="@{String.valueOf(viewmodel.getFormattedDate(lotteryDraw.getDrawDate()))}"
                />

            <TextView
                android:id="@+id/id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="@{String.valueOf(viewmodel.extractFirstDigits(lotteryDraw.getId()))}"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                >

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@{lotteryDraw.number1}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@{lotteryDraw.number2}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toEndOf="@id/item1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item3"
                    />


                <TextView
                    android:id="@+id/item3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@{lotteryDraw.number3}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toEndOf="@id/item2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item4"
                    />

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@{lotteryDraw.number4}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toEndOf="@id/item3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item5"
                    />

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@{lotteryDraw.number5}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toEndOf="@id/item4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item6"
                    />

                <TextView
                    android:id="@+id/item6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@{lotteryDraw.number6}"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_background_blue"
                    app:layout_constraintStart_toEndOf="@id/item5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Bonus -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/circle_background_outline_yellow"
                android:gravity="center"
                android:text="@{String.valueOf(lotteryDraw.bonusBall)}"
                android:textColor="@color/colorGrey"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:text="@{String.valueOf(viewmodel.getFormattedTopPrize(lotteryDraw.getTopPrize))}"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

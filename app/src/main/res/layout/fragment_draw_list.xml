<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" alias="v"/>

        <variable
            name="viewmodel" type="com.example.fortunes.viewmodel.SharedViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Collapsing app bar-->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<!-- android:theme="@style/AppTheme" -->

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/padding_medium"
                    app:layout_collapseMode="parallax">

                    <!-- Title TextView -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_activity_title"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textColor="@android:color/white"/>

                    <!-- Instructions TextView -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_activity_instructions"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- RecyclerView for displaying lottery draws -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="?actionBarSize"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@drawable/custom_scrollbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="@{viewmodel.loadingVisibilityState ? v.GONE : v.VISIBLE}"
            />

        <!-- Ticket button : slide Ticket View in -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_lottery_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:text="@string/button_your_lottery_ticket"
            app:icon="@drawable/ic_generate"
            style="@style/ButtonStyle"
            />

        <!-- Loading CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="@dimen/elevation_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            android:visibility="@{viewmodel.loadingVisibilityState ? v.VISIBLE : v.GONE}"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center_horizontal">

                <!-- Loading icon (ProgressBar) -->
                <ProgressBar
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    />

                <!-- Loading text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
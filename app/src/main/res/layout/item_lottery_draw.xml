<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" alias="v"/>

        <variable name="model" type="com.example.fortunes.model.LotteryDraw" />

        <variable name="viewModel" type="com.example.fortunes.viewmodel.SharedViewModel" />

    </data>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="4dp"
            android:layout_margin="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                >

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_header_background"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_ticket"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <TextView
                            android:id="@+id/lotteryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="@{viewModel.getLotteryDrawNumber(model.id)}"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            app:layout_constraintStart_toEndOf="@id/icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/drawDateText"/>

                        <TextView
                            android:id="@+id/drawDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.getFormattedDate(model.drawDate)}"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_small"
                            app:layout_constraintStart_toEndOf="@id/lotteryText"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        >

                        <TextView
                            android:id="@+id/ticket_ball_number_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="@{model.number1}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <TextView
                            android:id="@+id/ticket_ball_number_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@{String.valueOf(model.number2)}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toEndOf="@id/ticket_ball_number_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ticket_ball_number_3"
                            />


                        <TextView
                            android:id="@+id/ticket_ball_number_3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@{String.valueOf(model.number3)}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toEndOf="@id/ticket_ball_number_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ticket_ball_number_4"
                            />

                        <TextView
                            android:id="@+id/ticket_ball_number_4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@{String.valueOf(model.number4)}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toEndOf="@id/ticket_ball_number_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ticket_ball_number_5"
                            />

                        <TextView
                            android:id="@+id/ticket_ball_number_5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@{String.valueOf(model.number5)}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toEndOf="@id/ticket_ball_number_4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ticket_ball_number_6"
                            />

                        <TextView
                            android:id="@+id/ticket_ball_number_6"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@{String.valueOf(model.number6)}"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/circle_background_blue"
                            app:layout_constraintStart_toEndOf="@id/ticket_ball_number_5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Bonus -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/circle_background_outline_yellow"
                        android:gravity="center"
                        android:text="@{String.valueOf(model.bonusBall)}"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold" />

                    <!-- Details button -->
                    <LinearLayout
                        android:id="@+id/details_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_medium"
                        android:background="@drawable/button_background_white"
                        android:layout_gravity="bottom|end"
                        android:onClick="@{() -> viewModel.setSelectedItem(model)}"
                        >

                        <!-- TextView for displaying "Details" -->
                        <TextView
                            android:id="@+id/details_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_draw_details"
                            android:textColor="@color/colorLightBlue"
                            android:textSize="@dimen/text_size_small"
                            android:textAllCaps="false"
                            android:layout_marginEnd="@dimen/margin_small"
                            />

                        <!-- ImageView for displaying arrow icon -->
                        <ImageView
                            android:id="@+id/details_icon"
                            android:layout_width="@dimen/icon_size_xsmall"
                            android:layout_height="@dimen/icon_size_xsmall"
                            android:src="@drawable/ic_arrow"
                            app:tint="@color/colorLightBlue"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</layout>